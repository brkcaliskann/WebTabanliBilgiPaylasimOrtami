@model Blog.Models.Yorum
@{
    ViewBag.Title = "MakaleDetayGoster";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .line-breaks {
        white-space: pre-line;
    }
</style>

<div class="blog-posts classic-blog single">
    <div class="post format-image">
        <div class="meta">
            <span class="date">@Model.EklenmeTarihi</span>
        </div>
        <div class="blog-item-inner">
            <p style="font-weight:bold"><span class="line-breaks"> @Model.Makale.Baslik</span></p>
        </div>

        <div class="blog-item-inner">
            <p><span class="line-breaks"> @Model.Icerik</span></p>
        </div>
        <div class="blog-item-inner">
            <p><span class="line-breaks"> <a style="font-weight:bold">Kullanıcı Adı:</a> @Model.Kullanici.KullaniciAdi</span></p>
            <p><span class="line-breaks"> <a style="font-weight:bold">Adı:</a> @Model.Kullanici.KullaniciAdi</span></p>
            <p><span class="line-breaks"> <a style="font-weight:bold">Soyadı:</a> @Model.Kullanici.Soyadi</span></p>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Listeye Geri Dön", "TumYorumlar")
</p>

