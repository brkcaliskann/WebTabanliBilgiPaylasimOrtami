@model Blog.Models.Kullanici

@{
    ViewBag.Title = "UyeOl";
}

<h2>UYE OL</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Adi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
             <input type="text" name="Adi" value="" required />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Soyadi, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" name="Soyadi" value="" required />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" name="Mail" value="" required />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.KullaniciAdi, "Kullanıcı Adı", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" name="KullaniciAdi" value="" required />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Parola, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="text" name="Parola" value="" required />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DogumTarihi, "Doğum Tarihi" , htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="date" name="DogumTarihi" value="" required />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="KAYDET" class="btn btn-default" />
        </div>
    </div>
</div>
}
